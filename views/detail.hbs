<div class="input-group">
  <div class="input-group-prepend">
    <div class="input-group-text">
      <input type="checkbox" , name="done" {{#if todo.done}} checked {{/if}} disabled>
    </div>
  </div>

  <input type="text" placeholder="name" name="name" value="{{{todo.name}}}" class="form-control" disabled>
  <div class="input-group-append">
    <a class="btn btn-secondary" href="/" role="button">Back</a>
    <a href="/todos/{{{todo.id}}}/detail_edit" class="btn btn-success">Edit</a>
    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteWarning">
      Delete
    </button>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="deleteWarning" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">確定要刪除 <strong class="text-danger">{{{todo.name}}}</strong> ？
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        取消刪除請按
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        ，確認刪除請按
        <form method="POST" action="/todos/{{{todo.id}}}/delete?_method=DELETE" style="display: inline;">
          <button class="btn btn-danger mr-5" type="submit">
            Confirm
          </button>
      </div>
    </div>
  </div>
</div>