<form action="/todos/{{{todo.id}}}?_method=PUT" method="POST">

  <div class="input-group">
    <div class="input-group-prepend">
      <div class="input-group-text">
        <input type="checkbox" , name="done" {{#if todo.done}} checked {{/if}}>
      </div>
    </div>

    <input type="text" placeholder="name" name="name" value="{{{todo.name}}}" class="form-control">
    <div class="input-group-append">
      <a class="btn btn-secondary" href="{{{backURL}}}" role="button">Cancel</a>
    </div>
    <div class="input-group-append">
      <button class="btn btn-success" type="submit">Save</button>
    </div>
  </div>

</form>